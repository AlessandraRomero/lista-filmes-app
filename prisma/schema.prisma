// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  favorites UserMovie[]
}

model Movie {
  id          Int         @id @default(autoincrement())
  tmdbId      Int         @unique
  title       String
  posterPath  String
  overview    String
  users       UserMovie[]
}

model UserMovie {
  userId   Int
  movieId  Int
  user     User  @relation(fields: [userId], references: [id])
  movie    Movie @relation(fields: [movieId], references: [id])

  @@id([userId, movieId])
}
